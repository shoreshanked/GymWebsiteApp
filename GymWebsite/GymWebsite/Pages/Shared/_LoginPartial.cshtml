@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="navbar-collapse collapse d-sm-inline-flex justify-content-end m-auto">
    <ul class="navbar-nav navbar-right">
        @if (SignInManager.IsSignedIn(User))
        {
        <li class="mr-auto">
            <a id="manage" class="nav-link text-white ml-3 pt-1 pb-1" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><img class="rounded-circle" src="https://www.w3schools.com/bootstrap4/img_avatar3.png" alt="Profile" data-toggle="tooltip" title="Profile" style="width:50px;"></a>
        </li>
            <li class="mr-auto align-self-end">
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-white ml-3 p-0 pb-4 mb-1">Logout</button>
                </form>
            </li>
        }
        else
        {
            <li class="mr-auto">
                <a class="nav-link text-white ml-3" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li class="mr-auto">
                <a class="nav-link text-white ml-3" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
        }
    </ul>

</div>
