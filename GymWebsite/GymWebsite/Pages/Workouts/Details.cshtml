@page
@model GymWebsite.Pages.Workouts.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<head>
    <script src="https://kit.fontawesome.com/a7acdedb07.js" crossorigin="anonymous"></script>
</head>

<h1>Details</h1>

<div>
    <h4>Workout</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Workout.WorkoutName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Workout.WorkoutName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Workout.TrainingBlock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Workout.TrainingBlock.BlockName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Workout.Exercises)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Exercise</th>
                    <th>Weight</th>
                    <th>Sets</th>
                    <th>Reps</th>
                </tr>
                @foreach (var item in Model.Workout.Exercises)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Weight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sets)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reps)
                </td>
            </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="../Exercises/Create" asp-route-id="@Model.Workout.WorkoutID"><i class="fas fa-plus-square fa-2x pr-4 text-black-50" data-toggle="tooltip" title="Add Exercise to Workout"></i></a>
    <a asp-page="../TrainingBlocks/Details" asp-route-id="@Model.Workout.TrainingBlockID">Back to training Block</a>
    <a asp-page="./Edit" asp-route-id="@Model.Workout.WorkoutID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
