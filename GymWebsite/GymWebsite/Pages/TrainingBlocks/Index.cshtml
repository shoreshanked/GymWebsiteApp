@page
@model GymWebsite.Pages.TrainingBlocks.IndexModel

@{
    ViewData["Title"] = "Index";
}
<head>
    <script src="https://kit.fontawesome.com/a7acdedb07.js" crossorigin="anonymous"></script>
</head>

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New training Block</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TrainingBlock[0].BlockName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrainingBlock[0].User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TrainingBlock) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BlockName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FirstName)
            </td>
            <td>
                <a asp-page="../Workouts/Create" asp-route-id="@item.TrainingBlockID"><i class="fas fa-plus-square fa-2x pr-4 text-black-50"></i></a>
                <a asp-page="./Edit" asp-route-id="@item.TrainingBlockID"><i class="fas fa-edit fa-2x pr-3 text-black-50"></i></a>
                <a asp-page="./Details" asp-route-id="@item.TrainingBlockID"><i class="fas fa-info-circle fa-2x pr-4 text-black-50"></i></a>
                <a asp-page="./Delete" asp-route-id="@item.TrainingBlockID"><i class="fas fa-trash-alt fa-2x text-black-50"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
