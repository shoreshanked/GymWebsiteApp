@page
@model GymWebsite.Pages.TrainingBlocks.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>TrainingBlock</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TrainingBlock.TrainingBlockID" />
            <div class="form-group">
                <label asp-for="TrainingBlock.BlockName" class="control-label"></label>
                <input asp-for="TrainingBlock.BlockName" class="form-control" />
                <span asp-validation-for="TrainingBlock.BlockName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrainingBlock.User.FirstName" class="control-label"></label>
                <select asp-for="TrainingBlock.UserID" class="form-control" asp-items="ViewBag.FirstName"></select>
                <span asp-validation-for="TrainingBlock.UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
